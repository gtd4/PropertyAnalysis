@model PropertyAnalysisTool.Models.ComparePropertyModel
@{
    ViewBag.Title = "Compare";
    var containerSize = "col-sm-" + Model.ContainerSize;
}

<div class="row">
    <div class="col-sm-12">
        <h1>Compare</h1>
    </div>
    @foreach (var property in Model.Properties)
    {
        <div class="@containerSize">
            @{Html.RenderPartial("ComparePropertyPartial", property);}
            @*<div class="col-lg-12">
                @{Html.RenderPartial("PropertyDetailsInfoPartial", property);}
            </div>
            @{Html.RenderPartial("CompareCalculatorPartial", property);}*@
        </div>
                }
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/propertyCalculator")

}