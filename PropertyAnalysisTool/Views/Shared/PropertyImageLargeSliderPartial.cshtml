@model List<PropertyAnalysisTool.Models.PhotoModel>

<div id="@Model.First().PhotoId" class="carousel slide" data-ride="carousel" data-interval="false">

    @if (Model.Count > 1)
    {
     <!-- Indicators -->

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @for (var i = 0; i < Model.Count; i++)
        {
            var active = i == 0 ? "active" : "";
            <div class="item @active">
                <img src="@Model.ElementAt(i).PhotoUrl.FullSize" />
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#@Model.First().PhotoId" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#@Model.First().PhotoId" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    }else
    {
        <img src="@Model.First().PhotoUrl.Large" />
    }
</div>

