<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("metatags", false)
    <title>@ViewBag.Title - Property Analysis</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Scripts.RenderFormat("<script async src='{0}'></script>", "~/ bundles / modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/custom-font-icons-master/custom-font-icons-master/custom-font-icons.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        @*<div class="container">*@
            <div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home", null)">
                        <img src="~/Content/Images/LogoWhite.svg" class="navbar-brand"/>
                    </a>
                    @*@Html.ActionLink("Property Analysis", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Residential", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sections", "Index", "Home", new { propType = "Sections" }, null)</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        @*<li>@Html.ActionLink("CheaperThanRV", "CheaperThanRV", "Home")</li>*@
                    </ul>
                    @*@Html.Partial("_LoginPartial")*@
                </div>
            </div>
        @*</div>*@
    </div>
    <div class="body-content">
        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Property Analysis</p>
            </footer>
        </div>
    </div>
    
    <script data-main="/Scripts/app" src="/Scripts/require.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>